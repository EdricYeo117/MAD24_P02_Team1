<!-- cardbackground.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="@color/palettebeige" />

    <!-- Corner radius -->
    <corners android:radius="8dp" />

    <!-- Elevation for shadow -->
    <padding android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
